{{#if results}}
  <h4>Results</h4>
  <div class="form-group">
    <button type="button" class="btn btn-default" title="Clear Results" onclick={{action onClearAll}}>
      Clear All
    </button>
    <button type="button" class="btn btn-default" title="{{if resultsHidden 'Show' 'Hide'}} Results" onclick={{action onToggleAll}}>
      {{if resultsHidden 'Show' 'Hide'}} All
    </button>
  </div>

  {{#sortable-objects sortableObjectList=results sortEndAction='sortEndAction'
    class='list-group results-list'
    tagName='ul'}}
    {{#each results as |result|}}
      {{#draggable-object content=result isSortable=true
        mouseEnter=(action onOver result)
        mouseLeave=(action onOut result)
        class='list-group-item clearfix'
        tagName='li'}}
        {{markup-result-item data=result editable=editable
          onremove=(action onRemove)
          ontoggle=(action onToggle)
          onedit=(action onEdit)
        }}
      {{/draggable-object}}
    {{/each}}
  {{/sortable-objects}}
{{/if}}
